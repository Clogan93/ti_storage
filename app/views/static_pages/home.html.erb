<main id="home_page">
  
  <section class="find_storage">
    <div class="container-fluid">
      <h6>Stress-free storage</h6>
      <div class="find_storage_rectangle">
        <h4>Find Storage in Your Area</h4>

        <div class="row">
          <div class="col-xs-8">
            <input type="text" placeholder="City, Zip Code" class="form-control find_storage_input">

            <div class="dropdown open">
              <div class="dropdown-menu">
                <div class="guessed_and_view_all">
                  <div class="pull-xs-left guessed">New York</div>
                  <a class="pull-xs-right view_all">View All Locations</a>
                  <div class="clearfix"></div>
                </div>
                
                <div class="locations">
                  <% 1.times do %>

                    <a class="location">
                      <div class="row">
                        <div class="col-xs-8 name">
                          <%= image_tag 'common_elements/location_pin_grey.svg' %>
                          <span>Bronx, NY - 1297</span>
                        </div>
                        <div class="col-xs-4 text-xs-right comment red">
                          XL Unit - 50% off!
                        </div>
                      </div>
                    </a>
       
                  <% end %>

                  <% 2.times do %>

                    <a class="location">
                      <div class="row">
                        <div class="col-xs-8 name">
                          <%= image_tag 'common_elements/location_pin_grey.svg' %>
                          <span>Bronx, NY - 1297 Cromwell Ave</span>
                        </div>
                        <div class="col-xs-4 text-xs-right comment grey">
                          64 Units
                        </div>
                      </div>
                    </a>

                  <% end %>
                </div>

                <div class="reserve_today">
                  Reserve storage today and get your first month free!
                </div>
                
              </div>
            </div>

          </div>
          <div class="col-xs-4">
            <a class="button blue search">Search</a>
          </div>


        </div>
      </div>
    </div>

    <div class="reserve_now">
      Reserve Now and get your first month free!
    </div>
  </section>

  <section class="recommended_locations">
    <div class="container-fluid">
      <h4 class="heading">Recommended Locations for You</h4>

      <div class="row">
        <div class="col-lg-6">
          <div class="location_preview pull-lg-right">

            <div class="row city">
              <div class="col-xs-12">
                Brooklyn
              </div>
            </div>

            <div class="row info">
              <div class="col-xs-6 photo">
                <%= image_tag 'http://placehold.it/182x136' %>
              </div>
              <div class="col-xs-6 details">
                <div class="miles_away">
                  <%= image_tag 'common_elements/location_pin.svg' %>
                  <span class="how_many">3 Miles Away</span>
                </div>

                <div class="address">
                  183 Lorraine Street<br>
                  Brooklyn, NY 11231<br>
                  <b class="telephone">718-509-6524</b>
                </div>

                <div class="location_rating">
                  <span class="number">4.9</span>
                  <span class="stars">
                    <!-- temporary, since I don't yet know how that will be implemented -->
                    <% 5.times do %>
                      <%= image_tag 'common_elements/star.svg' %>
                    <% end %>
                  </span>
                  <span class="amount_of_reviews">(6)</span>
                </div>

                <div class="show_all_units">
                  <%= link_to 'Show All Available Units' %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-6">
          <div class="location_preview pull-lg-left">

            <div class="row city">
              <div class="col-xs-12">
                Brooklyn
              </div>
            </div>

            <div class="row info">
              <div class="col-xs-6 photo">
                <%= image_tag 'http://placehold.it/182x136' %>
              </div>
              <div class="col-xs-6 details">
                <div class="miles_away">
                  <%= image_tag 'common_elements/location_pin.svg' %>
                  <span class="how_many">3 Miles Away</span>
                </div>

                <div class="address">
                  183 Lorraine Street<br>
                  Brooklyn, NY 11231<br>
                  <b class="telephone">718-509-6524</b>
                </div>

                <div class="location_rating">
                  <span class="number">4.9</span>
                  <span class="stars">
                    <% 5.times do %>
                      <%= image_tag 'common_elements/star.svg' %>
                    <% end %>
                  </span>
                  <span class="amount_of_reviews">(6)</span>
                </div>

                <div class="show_all_units">
                  <%= link_to 'Show All Available Units' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="ti_storage_benefits">
    <div class="container-fluid">
      <h4 class="heading">Treasure Island Storage Benefits</h4>
      <div class="row">
        <div class="col-lg-2 col-xs-4 offset-lg-1 benefit">
          <%= image_tag 'static_pages/home_page/benefits/climate.svg' %>
          <div class="name">Climate Control</div>
        </div>

        <div class="col-lg-2 col-xs-4 benefit">
          <%= image_tag 'static_pages/home_page/benefits/moving-services.svg' %>
          <div class="name">Free Moving Services</div>
        </div>

        <div class="col-lg-2 col-xs-4 benefit">
          <%= image_tag 'static_pages/home_page/benefits/express-check.svg' %>
          <div class="name">Express Check-in</div>
        </div>

        <div class="col-lg-2 col-xs-6 benefit">
          <%= image_tag 'static_pages/home_page/benefits/variety-of.svg' %>
          <div class="name">Variety of unit sizes</div>
        </div>

        <div class="col-lg-2 col-xs-6 benefit">
          <%= image_tag 'static_pages/home_page/benefits/promotions.svg' %>
          <div class="name">Promotions & â€¨Specials</div>
        </div>
      </div>
    </div>
  </section>

  <section class="blog_articles">
    <div class="container-fluid">
      <div class="row">
        <% 3.times do %>
          <div class="col-md-4 col-xs-12 article">
            <h4 class="heading">This is an Article Or Post</h4>
            <%= image_tag 'http://placehold.it/343x260' %>
          </div>
        <% end %>
      </div>

      <%= link_to 'Read More', '', class: 'button read_more' %>
    </div>
  </section>

  <section class="ti_family_of_businesses">
    <div class="container-fluid">
      <h4 class="heading">Treasure Island TI Family of Businesses</h4>
      <div class="row">
        <% 3.times do %>
          <div class="col-md-4 col-xs-12 business">
            <%= image_tag 'http://placehold.it/282x282' %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
  
</main>

