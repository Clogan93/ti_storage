<%= render partial: 'common/breadcrumbs', locals: { links: ['search'] } %>

<main id="search_index_page">
  <div class="container-fluid">

    <%= render partial: 'common/search_field_and_ad' %>

    <%= render partial: 'search/index.mobile', locals: { storages: @all_storages } %>

    <div class="content_bordering hidden-xs-down">
      <div class="row">
        <div class="col-xl-6 map_and_sizing_guide_preview">
            <section class="map"></section>
        </div>
        <div class="col-xl-6 search_results">
          <section class="top_choices_around_you">
            <div class="trapezoid">
              <div class="heading heading_font">Top Choices Around You</div>
            </div>
            <div class="units">
              <% 3.times do %>
                <%= render 'search/in_index/unit' %>
              <% end %>
            </div>
          </section>

          <section class="reserve_online_today_ad">
            <%= image_tag 'common/ads/green_checkmark_in_circle.png' %>
            <div class="red">
              Reserve Online Today To Lock In Savings
            </div>
            <div class="black">
              Up to 20% Off & First Month Free & Free Move-In Truck & Driver!
            </div>
          </section>

          <section class="detailed_locations">
            <% @all_storages.each do |storage| %>
              <div class="detailed_location_and_units">

                <div class="detailed_location">
                  <div class="photo">
                    <%= image_tag "common/storages/#{storage.id}.jpg" %>
                  </div>
                  <div class="storage_details">
                    <div class="miles_away">
                      <%= image_tag 'common_elements/location_pin.svg' %>
                      <span class="how_many">3 Miles Away</span>
                    </div>

                    <h5 class="title">
                      <%= storage.title %>
                    </h5>

                    <div class="address">
                      <%= storage.address %><br>
                      <%= storage.area %> <%= storage.zip_code %><br>
                      <b class="telephone"><%= storage.phone %></b>
                    </div>

                    <%= render 'common/storage_rating.html.erb' %>

                    <a class="show_all_units">
                      Show All Available Units
                    </a>
                  </div>

                  <div class="hidden-sm-down">
                    <%= render 'common/sizing_guide_preview' %>
                  </div>
                </div>

                <div class="units">
                  <% 2.times do %>
                    <%= render 'search/in_index/unit' %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </section>

          <div class="hidden-lg-up text-md-center">
            <%= render 'common/sizing_guide_preview' %>
          </div>

        </div>
      </div>
    </div>

  </div>
</main>

<%= render 'common/sizing_guide_modal' %>