<header class="desktop hidden-md-down">
  <%# 'invisible' if @header_navigation_is_hidden %>
  <section class="sup_header">
    <section class="links">
      <a href="<%= contact_path %>">Contact Us</a>
      <a href="<%= commercial_storage_path %>">Commercial Storage</a>
      <a href="/brooklyn">Brooklyn Self-Storage</a>
      <a href="/queens">Queens Self-Storage</a>
      <a href="/new-jersey">New Jersey Self-Storage</a>
    </section>

    <%= render(partial: 'common/social_icons') %>
  </section>

  <section class="main_header">
    <a href="<%= root_path %>" class="logo">
      <%= image_tag('layouts/header/logo-header.png') %>
    </a>

    <div class="phone">
      <%= image_tag '_common/phone.png' %>
      <span>1-800-TI-STORAGE</span>
    </div>

    <%= react_component('Header_DropdownMenus', {
      storages: @all_storages,
      categories: @all_categories
    }) %>

    <!-- https://docs.livechatinc.com/js-api/#open-the-chat-window -->
    <div class="live_chat" onclick="LC_API.open_chat_window();">
      <%= image_tag '_common/live-chat-icn_red.svg' %>
      <span>Live Chat</span>
    </div>

    <%= link_to("My Account", myaccount_path, class: "my_account button") %>
  </section>
</header>

<%= render(partial: 'layouts/in_application/header.mobile') %>
