<nav id="breadcrumbs" class="heading_font">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <%= link_to '< Back to Search', search_path %>
      </div>
    </div>
  </div>
</nav>

<main id="checkout_new_page">
  <div class="container-fluid">
    <section class="step_navigation">
      <div class="row">
        <div class="col-md-6">
          <h2>Step 2: Confirm Your Reservation</h2>
        </div>

        <div class="col-md-6 steps">
          <div class="titles">
            <h5>Step 1</h5>
            <h5 class: 'active'>Step 2</h5>
            <h5>Step 3</h5>
          </div>

          <%= image_tag 'checkout/step_2_active.png' %>
        </div>
      </div>
    </section>

    <div class="sidebar_and_steps">
      <%= render partial: '/checkout/in_new/your_reservation' %>

      <section class="step_2 step block">
        <h5 class="block_heading">Confirm Your Reservation</h5>

        <section class="enter_below">
          <h4>Enter Your Payment information below</h4>
          <p>Safe money transfer with your bank acount. Visa, Master, Discover, Amex, JCB.</p>
        </section>

        <%= form_for current_reservation, url: [:reservation, :checkout] do |f| %>
          <%= fields_for(:payment, current_payment) do |p| %>
          <%= p.text_field :card_holder_name, placeholder: "Name", class: "form-control" %>
          <%= p.text_field :card_number, placeholder: "Number", class: "form-control" %>
          <div class="date_and_cvv">
            <%= p.select :expire_month, card_month_options, {}, { class: "form-control" } %>
            <%= p.select :expire_year, card_year_options, {}, { class: "form-control" } %>
            <%= p.text_field :cvv2, placeholder: "CVV", class: "form-control" %>
          </div>
          <%= p.text_field :postal_code, placeholder: "Billing Postal Code", class: "form-control" %>
          <% end %>
          <%= f.text_field :coupon_code, placeholder: "Coupon Code", class: "form-control" %>

          <%= f.submit "Continue", class: 'button red' %>
        <% end %>
      </section>
    </div>
  </div>
</main>
