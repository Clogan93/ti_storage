<%
  sizes = [
    {
      title: 'small',
      explanation: 'up to 50 Square Feet...',
      description: 'Our small storage units are up to 50 sq. ft. in size and is the equivalent of holding enough items that would fit in a studio to 1 bed. Belongings that can fit includes a full/queen mattress set, sofa and dining room set, plus a few boxes and smaller items.'
    },
    {
      title: 'medium',
      explanation: 'up to 150 Square Feet...',
      description: 'Organizing items in our medium units is similar to packing a 1 - 2-bedroom apartment. Holds typical household items and furniture, plus appliances, with room for boxes and extras.'
    },
    {
      title: 'large',
      explanation: 'up to 300 Square Feet...',
      description: 'A large unit accommodates items that are comparable to a 3 - 4-bedroom home. At this capacity units can hold bedroom sets, appliances, dining/living sets and office furniture.'
    },
    {
      title: 'x-large',
      explanation: 'over 300+ Square Feet...',
      description: 'Our premium sized units are custom sizes mostly for our commercial customers who have a lot of equipment or to excess inventory.'
    }
  ]
%>


<div class="select_size_and_sizing_guide">
  <div class="row">
    <div class="col-xl-10 col-xs-12 hidden-lg-down select_size">
      <div class="row">
        <div class="col-xs-12">
          <h3 class="blue_heading">Select size</h3>
        </div>
      </div>

      Treasure Island Storage units are in accordance to industry standard sizes. The dimensions are displayed  with width, depth, and if noted, height.

      <div class="row">
        <div class="col-xs-2">
          <div class="size_option">
            <div class="size">All Units</div>
          </div>
        </div>
        <% sizes.each do |size| %>
          <div class="col-xs-2">
            <div class="size_option">
              <div class="size"><%= size[:title] %></div>
              <div class="description"><%= size[:explanation] %></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-xl-2 col-xs-12">
    <%= react_component('SizingGuidePreview') %>
    </div>
  </div>
</div>

<div class="unit_options">
  <div class="row hidden-md-down table_head">
    <div class="col-xs-2">Size</div>
    <div class="col-xs-3">Features</div>
    <div class="col-xs-2">Promotion</div>
    <div class="col-xs-2">Monthly price</div>
    <div class="col-xs-3"></div>
  </div>

  <% 3.times do %>
    <div class="row table_row">
      <div class="col-md-2 col-xs-6 size">
        <h5 class="hidden-md-up mobile_heading">Size</h5>
        <div class="word_and_number">
          SMALL<br>
          4x4
        </div>
        <a class="size_help" data-toggle="modal" data-target="#sizing_guide_modal">Size Help</a>
      </div>
      <div class="col-md-3 col-xs-6 features">
        <h5 class="hidden-md-up mobile_heading">Features</h5>
        <ul>
          <li>
            <%= image_tag 'locations/in_show/storage_units/tick_icon.svg', class: 'tick_icon' %>
            Climate Control
          </li>
          <li>
            <%= image_tag 'locations/in_show/storage_units/tick_icon.svg', class: 'tick_icon' %>
            Interior
          </li>
          <li>
            <%= image_tag 'locations/in_show/storage_units/tick_icon.svg', class: 'tick_icon' %>
            Locker Upper
          </li>
          <li>
            <%= image_tag 'locations/in_show/storage_units/tick_icon.svg', class: 'tick_icon' %>
            Item
          </li>

        </ul>
      </div>
      <div class="col-md-2 col-xs-6 promotion">
        <h5 class="hidden-md-up mobile_heading">Promotion</h5>
        <%= image_tag 'common/ads/promotion_50_sale.svg' %>
      </div>
      <div class="col-md-2 col-xs-6 monthly_price">
        <h5 class="hidden-md-up mobile_heading">Monthly Price</h5>

        <div class="in_dollars">$38</div>
        <div class="online_rate_footnote">*Online Rate</div>
        <div class="in_dollars_in_store">$59 In Store</div>
      </div>
      <div class="col-md-3 col-xs-12 continue">
        <div class="button blue">Continue</div>
      </div>
    </div>
  <% end %>
</div>

<%= render 'common/sizing_guide_modal' %>
