<section class="storage_view hidden-md-down">
  <div class="photos">
    <div class="main_photo">
      <%= image_tag "_db/storages/#{storage[:id]}.jpg" %>
    </div>

    <div class="additional_photos">
      <% 3.times do |i| %>
        <%= image_tag "_db/storages/#{storage[:id]}/#{i+1}.jpg" %>
      <% end %>
    </div>
  </div>

  <section class="info first">
    <h5 class="title"><%= storage.title %></h5>
    <div class="address">
      <h6>Location</h6>
      <p>
        <%= storage.address %>
        <%= storage.area %>
        <%= storage.zip_code %>
      </p>
    </div>

    <div class="phone_number">
      <h6>Phone number</h6>
      <p><%= storage[:phone] %></p>
    </div>

    <a href="<%= storage.url %>" class="button blue find_units">FIND UNITS</a>

    <%= react_component('FetchableStorageRating', { placeId: storage.place_id, numberIsDisplayed: true }) %>

    <a href="<%= storage.url %>#reviews" class="read_reviews">Read Reviews</a>
  </section>

  <section class="info second">
    <div class="office_hours">
      <h6>Office hours</h6>
      <p>
        <% storage[:office_hours].each do |hours| %>
          <%= hours %><br>
        <% end %>
      </p>
    </div>

    <div class="access_hours">
      <h6>Access hours</h6>
      <p>
        <% storage[:access_hours].each do |hours| %>
          <%= hours %><br>
        <% end %>
      </p>
    </div>

    <a href="<%= storage.link_to_google_maps %>" target="_blank" class="get_directions">
      GET DIRECTIONS
    </a>
  </section>

  <section class="map">
    <%= react_component('StorageMap', { storage: storage }) %>
  </section>
</section>

<section class="storage_view-mobile hidden-lg-up">
  <%= render partial: 'common/storage_view.mobile', locals: { storage: storage } %>
</section>
